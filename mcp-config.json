{
  "tools": [
    {
      "name": "search",
      "description": "Generic search across labs, medications, visits, and BodySpec results",
      "endpoint": "/search",
      "method": "GET",
      "params": {
        "q": {
          "type": "string",
          "optional": true
        }
      }
    },
    {
      "name": "fetch",
      "description": "Fetch a specific record by ID",
      "endpoint": "/fetch/{id}",
      "method": "GET",
      "path_params": {
        "id": {
          "type": "string"
        }
      }
    },
    {
      "name": "fetch_bodyspec_results",
      "description": "List BodySpec scan results",
      "endpoint": "/bodyspec/results",
      "method": "GET"
    }
  ]
}
